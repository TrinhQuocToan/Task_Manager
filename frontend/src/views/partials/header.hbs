<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
        
        
        <div class="d-flex align-items-center">
            <a class="navbar-brand me-4" href="/">
                <span class="logo-text"><span class="logo-q">Q</span>uanLyChiTieu</span>
            </a>

            {{#if user}}
            <div class="main-nav d-flex">
                
                <a class="nav-link {{#if isTransactions}}active{{/if}}" href="/transactions">
                    <i class="fas fa-exchange-alt me-1"></i>Giao dịch
                </a>
                <a class="nav-link {{#if isStatistics}}active{{/if}}" href="/statistics">
                    <i class="fas fa-chart-line me-1"></i>Thống kê
                </a>
                
            </div>
            {{/if}}
        </div>

        {{!-- Search and User Profile --}}
        <div class="d-flex align-items-center">
            {{#if user}}
            

            <div class="nav-item dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                    <img src="{{user.avatar}}" 
                         alt="{{user.username}}" 
                         class="rounded-circle me-2"
                         width="32" 
                         height="32"
                         onerror="this.src='https://secure.gravatar.com/avatar/default?s=32&d=mp'">
                    <span>{{user.username}}</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <a class="dropdown-item" href="/me/profile">
                            <i class="fas fa-user me-2"></i>Hồ sơ
                        </a>
                    </li>
                    
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item" href="/auth/logout">
                            <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                        </a>
                    </li>
                </ul>
            </div>
            {{else}}
            <a class="nav-link" href="/auth/login">
                <i class="fas fa-sign-in-alt me-1"></i>Đăng nhập
            </a>
            <a class="nav-link" href="/auth/register">
                <i class="fas fa-user-plus me-1"></i>Đăng ký
            </a>
            {{/if}}
        </div>
    </div>
</nav>