<div class="transactions-page">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Quản Lý Giao Dịch</h2>
        <a href="/transactions/create" class="btn btn-success">
            <i class="fas fa-plus"></i> Thêm Giao Dịch
        </a>
    </div>

    {{!-- Bộ lọc chính --}}
    <div class="card mb-4">
        <div class="card-body">
            <form id="mainFilterForm" action="/transactions" method="GET" class="row g-3">
                {{!-- Thêm hidden fields để giữ giá trị sort --}}
                <input type="hidden" name="sortField" value="{{filter.sortField}}">
                <input type="hidden" name="sortOrder" value="{{filter.sortOrder}}">
                
                <div class="col-md-3">
                    <label class="form-label">Loại giao dịch</label>
                    <select class="form-select" name="type">
                        <option value="">Tất cả</option>
                        <option value="income" {{#if (eq filter.type 'income')}}selected{{/if}}>Thu nhập</option>
                        <option value="expense" {{#if (eq filter.type 'expense')}}selected{{/if}}>Chi tiêu</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Từ ngày</label>
                    <input type="date" class="form-control" name="startDate" value="{{filter.startDate}}">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Đến ngày</label>
                    <input type="date" class="form-control" name="endDate" value="{{filter.endDate}}">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-filter"></i> Lọc
                    </button>
                    <button type="button" class="btn btn-outline-secondary" onclick="clearFilter()">
                        <i class="fas fa-times"></i> Xóa bộ lọc
                    </button>
                </div>
            </form>
        </div>
    </div>

    {{!-- Bộ sắp xếp --}}
    <div class="mb-4">
        <form id="sortForm" action="/transactions" method="GET" class="d-flex align-items-center gap-2">
            {{!-- Thêm hidden fields để giữ giá trị filter --}}
            <input type="hidden" name="type" value="{{filter.type}}">
            <input type="hidden" name="startDate" value="{{filter.startDate}}">
            <input type="hidden" name="endDate" value="{{filter.endDate}}">
            
            <div class="d-flex align-items-center">
                <label class="me-2">Sắp xếp theo:</label>
                <select class="form-select me-2" name="sortField" id="sortField" style="width: auto;">
                    <option value="date" {{#if (eq filter.sortField 'date')}}selected{{/if}}>Ngày</option>
                    <option value="category" {{#if (eq filter.sortField 'category')}}selected{{/if}}>Danh mục</option>
                    <option value="note" {{#if (eq filter.sortField 'note')}}selected{{/if}}>Ghi chú</option>
                    <option value="amount" {{#if (eq filter.sortField 'amount')}}selected{{/if}}>Số tiền</option>
                </select>
                <select class="form-select me-2" name="sortOrder" id="sortOrder" style="width: auto;">
                    <option value="asc" {{#if (eq filter.sortOrder 'asc')}}selected{{/if}}>Tăng dần</option>
                    <option value="desc" {{#if (eq filter.sortOrder 'desc')}}selected{{/if}}>Giảm dần</option>
                </select>
            </div>
            <button type="submit" class="btn btn-success btn-sm">
                <i class="fas fa-sort"></i> Sắp xếp
            </button>
            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="clearSort()">
                <i class="fas fa-times"></i> Xóa sắp xếp
            </button>
        </form>
    </div>

    {{!-- Danh sách giao dịch --}}
    <div class="card">
        <div class="card-body">
            {{#if transactions.length}}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Ngày</th>
                            <th>Danh mục</th>
                            <th>Ghi chú</th>
                            <th>Số tiền</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each transactions}}
                        <tr>
                            <td>{{formatDate this.date}}</td>
                            <td>
                                <span class="badge {{#if (eq this.type 'income')}}bg-success{{else}}bg-danger{{/if}}">
                                    {{#if (eq this.type 'income')}}
                                    <i class="fas fa-arrow-up"></i>
                                    {{else}}
                                    <i class="fas fa-arrow-down"></i>
                                    {{/if}}
                                </span>
                                {{this.categoryId.name}}
                            </td>
                            <td>{{this.note}}</td>
                            <td class="{{#if (eq this.type 'income')}}text-success{{else}}text-danger{{/if}}">
                                {{formatCurrency this.amount}}
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a href="/transactions/edit/{{this._id}}" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form action="/transactions/{{this._id}}?_method=DELETE" method="POST"
                                        onsubmit="return confirm('Bạn có chắc chắn muốn xóa giao dịch này?');">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            {{else}}
            <div class="text-center py-4">
                <p class="text-muted">Không có giao dịch nào</p>
            </div>
            {{/if}}
        </div>
    </div>
</div>

{{!-- Add Transaction Modal --}}
<div class="modal fade" id="addTransactionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm Giao Dịch Mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form action="/transactions/store" method="POST">
                    <div class="mb-3">
                        <label class="form-label">Loại giao dịch</label>
                        <select name="type" id="transactionType" class="form-select" required>
                            <option value="expense">Chi tiêu</option>
                            <option value="income">Thu nhập</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Danh mục</label>
                        <select class="form-select" name="categoryId" id="categorySelect" required>
                            <option value="">Chọn danh mục</option>
                            <optgroup label="Chi tiêu" class="expense-categories">
                                {{#each expenseCategories}}
                                <option value="{{this._id}}" data-type="expense">
                                    {{this.name}}
                                </option>
                                {{/each}}
                            </optgroup>
                            <optgroup label="Thu nhập" class="income-categories">
                                {{#each incomeCategories}}
                                <option value="{{this._id}}" data-type="income">
                                    {{this.name}}
                                </option>
                                {{/each}}
                            </optgroup>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Số tiền</label>
                        <input type="number" name="amount" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ngày</label>
                        <input type="date" name="date" class="form-control"
                            value="{{formatDate currentDate 'YYYY-MM-DD'}}" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ghi chú</label>
                        <textarea name="note" class="form-control" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const mainFilterForm = document.getElementById('mainFilterForm');
        const sortForm = document.getElementById('sortForm');
        const sortField = document.getElementById('sortField');
        const sortOrder = document.getElementById('sortOrder');
        const inputs = mainFilterForm.querySelectorAll('select, input[type="date"]');

        // Tự động submit form khi thay đổi giá trị
        inputs.forEach(input => {
            input.addEventListener('change', () => {
                mainFilterForm.submit();
            });
        });

        // Xử lý thay đổi trường sắp xếp
        sortField.addEventListener('change', () => {
            // Nếu chọn category hoặc note, chỉ cho phép sắp xếp theo tên (asc/desc)
            if (sortField.value === 'category' || sortField.value === 'note') {
                sortOrder.value = 'asc'; // Mặc định sắp xếp tăng dần theo tên
            }
            sortForm.submit();
        });

        // Xử lý thay đổi thứ tự sắp xếp
        sortOrder.addEventListener('change', () => {
            sortForm.submit();
        });

        const transactionType = document.getElementById('transactionType');
        const categorySelect = document.getElementById('categorySelect');
        const expenseCategories = categorySelect.querySelector('.expense-categories');
        const incomeCategories = categorySelect.querySelector('.income-categories');

        // Hàm lọc danh mục theo loại giao dịch
        function filterCategories() {
            const selectedType = transactionType.value;

            // Ẩn/hiện các optgroup theo loại
            if (selectedType === 'expense') {
                expenseCategories.style.display = '';
                incomeCategories.style.display = 'none';
            } else {
                expenseCategories.style.display = 'none';
                incomeCategories.style.display = '';
            }

            // Reset giá trị đã chọn
            categorySelect.value = "";
        }

        // Lọc danh mục khi trang được tải
        filterCategories();

        // Lọc danh mục khi thay đổi loại giao dịch
        transactionType.addEventListener('change', filterCategories);

        // Đảm bảo chọn đúng loại danh mục
        categorySelect.addEventListener('change', function () {
            const selectedOption = this.options[this.selectedIndex];
            const categoryType = selectedOption.dataset.type;

            if (categoryType && categoryType !== transactionType.value) {
                alert('Vui lòng chọn danh mục phù hợp với loại giao dịch');
                this.value = '';
            }
        });
    });

    function clearFilter() {
        // Xóa các tham số filter và giữ lại các tham số sort
        const currentUrl = new URL(window.location.href);
        currentUrl.searchParams.delete('type');
        currentUrl.searchParams.delete('startDate');
        currentUrl.searchParams.delete('endDate');
        window.location.href = currentUrl.toString();
    }

    function clearSort() {
        // Xóa các tham số sort và giữ lại các tham số filter
        const currentUrl = new URL(window.location.href);
        currentUrl.searchParams.delete('sortField');
        currentUrl.searchParams.delete('sortOrder');
        window.location.href = currentUrl.toString();
    }

    function editTransaction(id) {
        window.location.href = `/transactions/${id}/edit`;
    }
</script>