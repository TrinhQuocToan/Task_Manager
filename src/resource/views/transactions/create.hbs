<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Thêm Giao Dịch Mới</h4>
                    <a href="/transactions" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
                <div class="card-body">
                    {{#if error}}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{error}}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    {{/if}}

                    <form action="/transactions/store" method="POST">
                        <div class="mb-3">
                            <label class="form-label">Loại giao dịch</label>
                            <div class="d-flex gap-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="type" id="typeIncome" value="income" 
                                           {{#if (eq formData.type "income")}}checked{{else}}checked{{/if}}>
                                    <label class="form-check-label" for="typeIncome">Thu nhập</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="type" id="typeExpense" value="expense"
                                           {{#if (eq formData.type "expense")}}checked{{/if}}>
                                    <label class="form-check-label" for="typeExpense">Chi tiêu</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Danh mục</label>
                            <select class="form-select" name="categoryId" id="categorySelect" required>
                                <option value="">-- Chọn danh mục --</option>
                                <optgroup label="Thu nhập" class="income-categories">
                                    {{#each incomeCategories}}
                                        <option value="{{this._id}}" data-type="income">{{this.name}}</option>
                                    {{/each}}
                                </optgroup>
                                <optgroup label="Chi tiêu" class="expense-categories">
                                    {{#each expenseCategories}}
                                        <option value="{{this._id}}" data-type="expense">{{this.name}}</option>
                                    {{/each}}
                                </optgroup>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Số tiền</label>
                            <div class="input-group">
                                <input type="text" 
                                       class="form-control" 
                                       name="amount" 
                                       required 
                                       pattern="[0-9]*"
                                       inputmode="numeric"
                                       value="{{formData.amount}}"
                                       oninput="this.value = this.value.replace(/[^0-9]/g, '')">
                                <span class="input-group-text">VND</span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Ngày</label>
                            <input type="date" class="form-control" name="date" 
                                   value="{{#if formData.date}}{{formData.date}}{{else}}{{currentDate}}{{/if}}" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Ghi chú</label>
                            <textarea class="form-control" name="note" rows="3">{{formData.note}}</textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/transactions" class="btn btn-secondary">Hủy</a>
                            <button type="submit" class="btn btn-primary">Lưu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const typeIncome = document.getElementById('typeIncome');
    const typeExpense = document.getElementById('typeExpense');
    const categorySelect = document.getElementById('categorySelect');
    const incomeCategories = categorySelect.querySelector('.income-categories');
    const expenseCategories = categorySelect.querySelector('.expense-categories');

    // Xử lý input số tiền
    const amountInput = document.querySelector('input[name="amount"]');
    amountInput.addEventListener('input', function(e) {
        // Chỉ cho phép nhập số
        this.value = this.value.replace(/[^0-9]/g, '');
    });

    function updateCategoryVisibility() {
        const isIncome = typeIncome.checked;
        if (isIncome) {
            incomeCategories.style.display = '';
            expenseCategories.style.display = 'none';
        } else {
            incomeCategories.style.display = 'none';
            expenseCategories.style.display = '';
        }
        // Reset giá trị đã chọn
        categorySelect.value = '';
    }

    updateCategoryVisibility();

    typeIncome.addEventListener('change', updateCategoryVisibility);
    typeExpense.addEventListener('change', updateCategoryVisibility);

    categorySelect.addEventListener('change', function() {
        const selectedOption = this.options[this.selectedIndex];
        const categoryType = selectedOption.dataset.type;
        const currentType = typeIncome.checked ? 'income' : 'expense';
        
        if (categoryType && categoryType !== currentType) {
            alert('Vui lòng chọn danh mục phù hợp với loại giao dịch');
            this.value = '';
        }
    });
});
</script>
